#include <stdio.h>

int main() {
    // Write C code here
    int n,i,j,k;
    printf("ENTER THE SIZE OF UPPER LEFT WING");
    scanf("%d",&n);
 for( i=1;i<=n;i++)
 {
     for( j=1;j<=i;j++)
     printf("*");
     for( k=1;k<=(2*n)-(2*i);k++)
     printf(" ");
     for( j=1;j<=i;j++)
     printf("*");
     printf("\n");
 }
  for( i=1;i<n;i++)
  {
      for(int j=n;j>i;j--)
      printf("*");
      for( k=1;k<=2*i;k++)
      printf(" ");
      for(int j=n;j>i;j--)
          printf("*");
      printf("\n");
  }
 
    return 0;
}
